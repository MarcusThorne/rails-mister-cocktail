<div id="show-page">
  
  <div id="cocktail-card">
    <% if @cocktail.photo.attached? %>
    <%= cl_image_tag @cocktail.photo.key, height: 200, width: 300, crop: :fill, radius: 8, id:"photo"  %>
    <% end %>

    <h2 style="border-bottom: 1px solid lightgrey; margin: 16px; padding-bottom: 8px;"><%= @cocktail.name, id="title" %></h2>
    <%= link_to ('<i class="far fa-edit"></i>').html_safe, edit_cocktail_path(@cocktail), class:"icons icon" %>

    <% @cocktail.doses.each do |dose|%>
      <div class="ingredients">
        <p><%= dose.description %> / <%= dose.ingredient.name %> </p>
        <div class="icons", style="font-size: 12px; position: static;">
          <%= link_to ('<i class="far fa-edit"></i>').html_safe, edit_cocktail_path(dose), class:"icon" %>
          <%= link_to ('<i class="fas fa-trash"></i>').html_safe, dose_path(dose), method: :delete, data: { confirm: "Are you sure you would like to DELETE " + dose.description + " / " + dose.ingredient.name }, class:"icon" %>
        </div>
      </div>
    <% end %>
  </div>

  <%= link_to 'Add Ingredience', new_cocktail_dose_path(@cocktail) %>

  <%= link_to ('<i class="fas fa-arrow-circle-left"></i>').html_safe, root_path, id:"back" %>
</div>
