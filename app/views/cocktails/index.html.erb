<h1>Cocktails</h1>

<% @cocktails.each do |cocktail| %>
  <ul>
    <%= link_to cocktail.name, cocktail_path(cocktail) %>
    <%= link_to 'Edit Cocktail', edit_cocktail_path(cocktail) %>
    <%= link_to ('<i class="fas fa-trash"></i>').html_safe, cocktail_path(cocktail), method: :delete, data: { confirm: "Are you sure you would like to DELETE " + cocktail.name } %>
  </ul>
<% end %>

<%= link_to 'Create Cocktail', new_cocktail_path %>
