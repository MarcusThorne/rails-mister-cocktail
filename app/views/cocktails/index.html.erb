<div id="home-page">
  <header><h1>Cocktails</h1></header>
  
  <%= link_to ('<i class="fas fa-plus"></i>').html_safe + ' Add a Cocktail', new_cocktail_path, class:"btn btn-success", id:"button" %>

  <div id="cards">
    <% @cocktails.each do |cocktail| %>
      <div id="cocktail-card">
        <% if cocktail.photo.attached? %>
          <%= cl_image_tag cocktail.photo.key,height: 200, width: 300, crop: :fill, radius: 8, id:"photo" %>
        <% end %>
              
        <h2><%= link_to cocktail.name, cocktail_path(cocktail), id:"title"%></h2>
        
        <div id="icons">
          <%= link_to ('<i class="far fa-edit"></i>').html_safe, edit_cocktail_path(cocktail), class:"icon" %>
          <%= link_to ('<i class="fas fa-trash"></i>').html_safe, cocktail_path(cocktail), method: :delete, data: { confirm: "Are you sure you would like to DELETE " + cocktail.name }, class:"icon" %>
        </div>   
      </div>
    <% end %>
  </div>
</div>
